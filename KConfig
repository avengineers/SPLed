mainmenu "SPLed"

menu "Linking"
    config LINKER_OUTPUT_FILE
        string
        prompt "LINKER_OUTPUT_FILE"
        default "my_main.exe"
        help
          The output file generated by the linker (e.g. main.exe or main.elf).

    config LINKER_BYPRODUCTS_EXTENSIONS
        string
        prompt "LINKER_BYPRODUCTS_EXTENSIONS"
        default "map"
        help
          The extensions of other byproducts generated by the linker (e.g. map)
endmenu

menu "Features"
    config BLINKING
        bool "Blinking Feature"
        default n
    
    if BLINKING
        choice BLINKING_RATE
            prompt "Select Blinking Mode"
            default BLINKING_RATE_FIXED
            config BLINKING_RATE_FIXED
                bool "Fixed"

            config BLINKING_RATE_MANUALLY_ADJUSTABLE
                bool "Manually adjustable"

            config BLINKING_RATE_AUTO_ADJUSTABLE
                bool "Automatically adjustable"
        endchoice
    endif

    config BRIGHTNESS_ADJUSTMENT
        bool "Brightness Adjustment Feature"
        depends on !BLINKING
        default n

    source "src/light_controller/KConfig"

endmenu
