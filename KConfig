mainmenu "SPL Demo"

menu "SPL Extensions"
    source "modules/spl_extension_zip/Kconfig"
endmenu

menu "Linking"
    config LINKER_OUTPUT_FILE
        string
        prompt "LINKER_OUTPUT_FILE"
        default "my_main.exe"
        help
          The output file generated by the linker (e.g. my_main.exe).

    config LINKER_BYPRODUCTS_EXTENSIONS
        string
        prompt "LINKER_BYPRODUCTS_EXTENSIONS"
        default "map"
        help
          The extensions of other byproducts generated by the linker (e.g. map)
endmenu

menu "Feature Model"
    config USE_COMPONENT_A_INTERFACE
        bool "this is the first feature"
        default n
    config USE_COMPONENT_B_INTERFACE
        bool "this is the second feature"
        default n
    config DUMMY_INTERFACE_DEFINED
        bool "this is the dummy feature"
        default y if USE_COMPONENT_A_INTERFACE || USE_COMPONENT_B_INTERFACE
    config PART_NUMBER
        string "part number"
        default "PN0013"
endmenu
